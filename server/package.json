    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-jwt": "^4.0.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.9.0",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1426.0",
    "skia-canvas": "^1.0.1",
    "sharp": "^0.32.4",
    "pino": "^8.15.0",
    "pino-http": "^8.4.0",
    "pino-pretty": "^10.2.0",
