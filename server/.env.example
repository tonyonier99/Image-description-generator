# Database
DATABASE_URL="postgresql://user:password@localhost:5432/image_description_generator"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# Object Storage (AWS S3 / Cloudflare R2)
STORAGE_PROVIDER=s3 # or 'r2'
STORAGE_REGION=us-east-1
STORAGE_BUCKET=image-description-generator
STORAGE_ACCESS_KEY_ID=your-access-key
STORAGE_SECRET_ACCESS_KEY=your-secret-key
STORAGE_ENDPOINT= # For R2, leave empty for S3

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Sentry (Optional)
SENTRY_DSN=

# Admin
ADMIN_UNLOCK_CODE=admin123